@page
@model TECsite.Pages.Accounts.loginModel
@{
    ViewData["Title"] = "Login page";
}
<div class="col-sm-4">
    <h3 style="color: red">@Model.rResponse</h3>
    <div class="container">
        <h3>Log In</h3>
        <form asp-page-handler="login" method="post">
            <label for="uname"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required/>
          
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required/>

            <button type="submit" class="link-button-class">Log In</button>

            <label>
              <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
          <div class=container>
              <a asp-area="" asp-page="/Accounts/ForgotPassword">Forgot Password?</a>
          </div>
        </form>
    </div>
  </div>