<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Energetic Convention</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120-precomposed.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152-precomposed.png" />
    <script src="https://kit.fontawesome.com/c649814c4b.js" crossorigin="anonymous"></script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2281776951920907" crossorigin="anonymous"></script>
</head>
<body id="main-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img srcset="/tec-logo.png 1065w" alt="T.E.C. Logo" sizes="(max-width: 600px) 40px, 60px"/>
                </a>
                <a class="navbar-brand" asp-area="" asp-page="/Index">The Energetic Convention</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-light" alt="Home" asp-area="" asp-page="/Index"><i class="fa-solid fa-house"></i></a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.redbubble.com/people/TheEnergeticCon/shop" class="nav-link text-light" alt="Merch"><i class="fa-solid fa-shirt"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" alt="Privacy" asp-area="" asp-page="/Privacy"><i class="fa-solid fa-lock"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" alt="Events" asp-area="" asp-page="/Events"><i class="fa-solid fa-calendar-days"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" alt="Discord" href="https://discord.gg/rGBn2uW"><i class="fa-brands fa-discord"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" alt="VRChat group" href="https://vrc.group/TEC.8265"><i class="fa-solid fa-message"></i></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav"><img srcset="/lib/bootstrap/dist/css/RW.png 429w" sizes="(max-width: 600px) 74px, 60px" class="RW"/></ul>
                    <!--
                    <partial name="_LoginPartial" />
                    -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - T.E.C. - <a asp-area="" asp-page="/Privacy">Privacy</a> - <a asp-area="" asp-page="/Contact">Contact Us!</a> <!-- - <a asp-area="" asp-page="/tecapi">API Docs</a> - <a asp-area="" asp-page="/Error">Error page check</a>-->
        </div>

        

    </footer>

    <div id="bubble-wrapper"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>